<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".Retail.RetailCustomersActivity">

    <!-- Customer Name EditText -->
    <EditText
        android:id="@+id/etCustomerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter the customer name"
        android:padding="12dp"
        android:textSize="18sp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Add Customer Button -->
    <Button
        android:id="@+id/btnAddCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Add New Customer"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/button_background" />

    <!-- Item Count EditText -->
    <EditText
        android:id="@+id/etItemCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter item count"
        android:padding="12dp"
        android:textSize="18sp"
        android:inputType="number"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Item Price EditText -->
    <EditText
        android:id="@+id/etItemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter item price"
        android:padding="12dp"
        android:textSize="18sp"
        android:inputType="numberDecimal"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="16dp" />

    <!-- Add Item Button -->
    <Button
        android:id="@+id/btnAddItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:layout_marginBottom="16dp" />

    <!-- RecyclerView for Customer List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:padding="8dp"
        tools:listitem="@layout/item_customer" />

</LinearLayout>
